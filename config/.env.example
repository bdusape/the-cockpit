# The Cockpit - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git (it's in .gitignore)

# ============================================
# Anthropic Claude API Configuration
# ============================================
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-api03-your-key-here

# Model selection (options: claude-sonnet-4-5-20250929, claude-haiku-4-5-20250929, claude-4-1-opus-20250929)
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Max tokens for responses (1000-4096 recommended)
CLAUDE_MAX_TOKENS=4096

# Temperature for responses (0-1, lower = more focused, higher = more creative)
CLAUDE_TEMPERATURE=0.7

# ============================================
# WhatsApp Business API Configuration
# ============================================
# Get these from: https://developers.facebook.com/apps/
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_VERIFY_TOKEN=your-custom-verify-token-make-this-random-and-secure

# Your WhatsApp Business phone number (format: +1234567890)
WHATSAPP_BUSINESS_NUMBER=+1234567890

# API version (latest: v17.0)
WHATSAPP_API_VERSION=v17.0

# ============================================
# Authorization Configuration
# ============================================
# Comma-separated list of authorized phone numbers (without + or -)
# Example: 1234567890,0987654321
AUTHORIZED_USERS=your-phone-number-here

# ============================================
# Automation Platform Configuration
# ============================================
# Choose one: pipedream, n8n, zapier
AUTOMATION_PLATFORM=pipedream

# Pipedream-specific (if using Pipedream)
PIPEDREAM_PROJECT_ID=your-project-id

# n8n-specific (if using n8n)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/cockpit

# ============================================
# GitHub Configuration (for agent configs)
# ============================================
# Your GitHub username
GITHUB_USERNAME=briandusape

# Repository name
GITHUB_REPO=the-cockpit

# Branch name (usually 'main')
GITHUB_BRANCH=main

# GitHub Personal Access Token (optional, for private repos)
# GITHUB_TOKEN=your-github-token-here

# ============================================
# Conversation Memory Storage
# ============================================
# Storage type: workflow_state, redis, supabase
MEMORY_STORAGE=workflow_state

# Redis configuration (if using Redis)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Supabase configuration (if using Supabase)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_KEY=your-service-key

# Maximum messages to keep in memory (recommended: 10)
MAX_MEMORY_MESSAGES=10

# Memory expiration in seconds (86400 = 24 hours)
MEMORY_EXPIRATION=86400

# ============================================
# Feature Flags
# ============================================
# Enable voice message support (true/false)
ENABLE_VOICE_MESSAGES=false

# Enable image support (true/false)
ENABLE_IMAGE_SUPPORT=false

# Enable conversation memory (true/false)
ENABLE_MEMORY=true

# Enable typing indicators (true/false)
ENABLE_TYPING_INDICATORS=true

# Enable read receipts (true/false)
ENABLE_READ_RECEIPTS=true

# ============================================
# Performance & Limits
# ============================================
# Rate limit per user (messages per minute)
RATE_LIMIT_PER_MINUTE=10

# Response timeout in seconds
RESPONSE_TIMEOUT=30

# Maximum retry attempts for failed API calls
MAX_RETRY_ATTEMPTS=3

# ============================================
# Logging & Monitoring
# ============================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable detailed logging (true/false)
DEBUG_MODE=false

# Enable cost tracking (true/false)
TRACK_COSTS=true

# ============================================
# Agent Configuration
# ============================================
# Default agent if no trigger specified
DEFAULT_AGENT=publicist

# Agent trigger prefix (default: @)
AGENT_TRIGGER_PREFIX=@

# ============================================
# Development vs Production
# ============================================
# Environment: development, production
NODE_ENV=development

# Webhook URL (for local development with ngrok)
# WEBHOOK_URL=https://your-ngrok-url.ngrok.io/webhook
